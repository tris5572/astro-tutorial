---
const pageTitle = 'My Astro Learning Blog';

// デプロイ時のサブディレクトリを考慮したリンク文字列を生成する。
function href(s: string): string {
	return `${import.meta.env.BASE_URL}${s}`;
}
---

<html lang="jp">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={href('favicon.svg')} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<a href={href('')}>Home</a>
		<a href={href('about/')}>About</a>
		<a href={href('blog/')}>Blog</a>
		<h1>My Astro Learning Blog</h1>
		<p>This is where I will post about my journey learning Astro.</p>
		<ul>
			<li><a href={`${import.meta.env.BASE_URL}posts/post-1/`}>Post 1</a></li>
			<li><a href={`${import.meta.env.BASE_URL}posts/post-2/`}>Post 2</a></li>
			<li><a href={`${import.meta.env.BASE_URL}posts/post-3/`}>Post 3</a></li>
		</ul>
	</body>
</html>
